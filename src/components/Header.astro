---
import head from '../assets/images/head.jpg';
---

<style>
    header{
      background-size: cover;
      background-position: center;
      height: 100px;
      width: 100%;
      margin-bottom:1rem;
        font-family: var(--font-heading);
        font-size: 3rem;
        padding:1rem;
        color:#eeeeee;
        text-shadow: #000000 1px 0 5px,#000000 1px 0 15px;
      display:flex;
    align-items: center;
    justify-content: space-between;
      gap:1rem;
      line-height:2.4rem;
    }    
    img{
      height:5rem;
      border-radius:50%;
      border:3px solid #eeeeee;
    }
</style>
<header style={`background-image: url('${head.src}');`}>
  <img src="/andrecollin.jpg" alt=""> Andre Collin
</header>
